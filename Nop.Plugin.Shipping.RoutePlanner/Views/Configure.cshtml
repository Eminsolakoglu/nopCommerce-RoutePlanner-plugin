
@model Nop.Plugin.Shipping.RoutePlanner.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}
@await Component.InvokeAsync("StoreScopeConfiguration")

<div class="card">
    <div class="card-body">
        <div class="form-group">
            <label asp-for="DepoAdresi">Depo Adresi</label>
            <input asp-for="DepoAdresi" class="form-control" />
            <span asp-validation-for="DepoAdresi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @ViewData["SuccessMessage"]
            </div>
        }
    </div>
</div>